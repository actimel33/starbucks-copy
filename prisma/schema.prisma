// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Banners {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  backgroundCollor  String
  imageUrl          String
  imageHeight       Int
  isReverted        Boolean
  bannerHeadingText String
  bannerText        String
  bannerTextCollor  String
  buttonVariant     String
  buttonText        String
  isSpecialBanner   Boolean
  position          Int         @default(0)
  clickInfo         ClickInfo[]
}

model ClickInfo {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  bannerId         String  @db.ObjectId
  userIp           String
  bannerPosition   Int     @default(0)
  clickCounter     Int?    @default(0)
  clickInformation String?

  banner Banners @relation(fields: [bannerId], references: [id], onDelete: Cascade)
}
